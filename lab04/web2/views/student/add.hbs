<div class="container text-center">
   <form class="bg-light" action="/student/information" method="post">
      <div>
         <h1 class="text text-primary">Add student</h1>
      </div>
      <div class="form-group">
         <label class="text text-success">Name</label>
         <input class="form-control" type="text" name="name" required>
      </div>
      <div class="form-group">
         <label class="text text-success">Age</label>
         <input class="form-control" type="number" name="age" required>
      </div>
      <div class="form-group">
         <label class="text text-success">Email</label>
         <input class="form-control" type="email" name="email" required>
      </div>
      <div class="form-group">
         <label class="text text-success">Mobile</label>
         <input class="form-control" type="tel" name="mobile" required>
      </div>
      <div class="form-group">
         <label class="text text-success">Gender</label><br>
         <input type="radio" name="gender" value="Male"> Male
         <input type="radio" name="gender" value="Female"> Female
         <input type="radio" name="gender" value="Other"> Other
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Major</label>
         <br>
         <select name="major" required>
            <option value="Information Technology">Information Technology</option>
            <option value="Business">Business</option>
            <option value="Graphic Design">Graphic Design</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="text text-success">Best student</label>
         <input type="checkbox" name="best_student" value=true>
      </div>
      <div class="form-group mt-3">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
   </form>
</div>