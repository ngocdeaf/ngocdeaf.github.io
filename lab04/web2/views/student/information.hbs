<table class="table-bordered">
   <tr>
      <th colspan="2">Student Detail</th>
   </tr>
   <tr>
      <th>Name</th>
      <td>{{ student.name }}</td>
   </tr>
   <tr>
      <th>Age</th>
      <td>{{ student.age }}</td>
   </tr>
   <tr>
      <th>Email</th>
      <td>{{ student.email}}</td>
   </tr>
   <tr>
      <th>Mobile</th>
      <td>{{ student.mobile}}</td>
   </tr>
   <tr>
      <th>Gender</th>
      <td>{{ student.gender }}</td>
   </tr>
   <tr>
      <th>Major</th>
      <td>{{ student.major }}</td>
   </tr>
   <tr>
      <th>Best student</th>
      <td>{{ student.best_student }}</td>
   </tr>
</table>